# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{xml,py}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{am,cpp,h}]
indent_style = space
indent_size = 4
